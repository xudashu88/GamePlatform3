<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.tencent.rtmp.ui.TXCloudVideoView
        android:id="@+id/tvv_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/bg_baccarat_video"
        android:visibility="visible" />

    <include layout="@layout/include_title_translate" />

    <com.chuangku.gameplatform3.widget.PercentCircleAntiClockwise
        android:id="@+id/pcac"
        android:layout_width="@dimen/unit55"
        android:layout_height="@dimen/unit55"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/unit200"
        android:layout_marginTop="@dimen/unit60"
        app:circleBackground="#000"
        app:radius="220"
        app:ringColor="#EEC51A"
        app:textColor="#ffffff" />

    <RelativeLayout
        android:layout_width="@dimen/unit63"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#66000000">

        <ImageView
            android:id="@+id/iv_set"
            android:layout_width="@dimen/unit45"
            android:layout_height="@dimen/unit45"
            android:layout_marginLeft="@dimen/unit10"
            android:background="@drawable/menu_pressed" />

        <ImageView
            android:layout_width="@dimen/unit45"
            android:layout_height="@dimen/unit15"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/unit50"
            android:background="@drawable/arrow_up" />

        <ImageView
            android:id="@+id/iv_arrow_down"
            android:layout_width="@dimen/unit45"
            android:layout_height="@dimen/unit15"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/arrow_down" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit240"
            android:layout_above="@id/iv_arrow_down" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/unit90"
        android:layout_height="@dimen/unit45"
        android:layout_above="@id/rl_dragon_bonus"
        android:layout_marginBottom="@dimen/unit10"
        android:layout_marginLeft="@dimen/unit5"
        android:background="@drawable/button_bet_disable_bg">

        <ImageView
            android:layout_width="@dimen/unit20"
            android:layout_height="@dimen/unit20"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit5"
            android:background="@drawable/icon_cancel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/unit5"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_dragon_bonus"
        android:layout_width="@dimen/unit90"
        android:layout_height="@dimen/unit45"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/unit20"
        android:layout_marginLeft="@dimen/unit5"
        android:background="@drawable/select_dragon_btn_baccarat"
        android:clickable="true">
        <!--choose_table_row2_bg  select_dragon_btn_baccarat-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/unit20"
            android:text="@string/dragon_bonus"
            android:textColor="@color/white"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/unit90"
        android:layout_height="@dimen/unit45"
        android:layout_above="@id/rl_sure"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/unit10"
        android:layout_marginRight="@dimen/unit70">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_switch_on"
                android:layout_width="@dimen/unit90"
                android:layout_height="@dimen/unit40"
                android:background="@drawable/commission_off"
                android:gravity="center"
                android:paddingLeft="@dimen/unit18"
                android:text="@string/no_commission_off"
                android:textColor="@color/white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_switch_off"
                android:layout_width="@dimen/unit90"
                android:layout_height="@dimen/unit40"
                android:background="@drawable/commission_on"
                android:gravity="center"
                android:paddingRight="@dimen/unit18"
                android:text="@string/no_commission"
                android:textColor="@color/white"
                android:visibility="visible" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_sure"
        android:layout_width="@dimen/unit90"
        android:layout_height="@dimen/unit45"
        android:layout_above="@id/rl_dragon_bonus"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/unit10"
        android:layout_marginRight="@dimen/unit70"
        android:background="@drawable/button_bet_disable_bg">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit5"
            android:background="@drawable/icon_confirm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/unit5"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>