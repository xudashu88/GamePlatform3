<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit25"
        android:layout_marginTop="@dimen/unit20"
        android:gravity="center"
        android:text="@string/set_language"
        android:textColor="@color/mainFontGolden"
        android:textSize="@dimen/font16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/unit30"
        android:background="@drawable/bg_gray_stroke_golden_menu_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/unit8"
            android:background="#252525"
            android:orientation="vertical"
            android:weightSum="3">

            <RelativeLayout
                android:id="@+id/rl_language_zh"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="rl_language_zh">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit20"
                    android:text="简体中文"
                    android:textColor="@color/mainFontGolden"
                    android:textSize="@dimen/font20" />

                <!--<TextView-->
                <!--android:layout_width="@dimen/unit30"-->
                <!--android:layout_height="@dimen/unit30"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="@dimen/unit100"-->
                <!--android:background="#343434" />-->

                <ImageView
                    android:id="@+id/iv_language_zh"
                    android:layout_width="@dimen/unit35"
                    android:layout_height="@dimen/unit30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/unit100"
                    android:background="#343434"
                    android:src="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_language_zh_tw"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="rl_language_zh_tw">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit20"
                    android:text="繁體中文"
                    android:textColor="@color/mainFontGolden"
                    android:textSize="@dimen/font20" />

                <!--<TextView-->
                <!--android:layout_width="@dimen/unit30"-->
                <!--android:layout_height="@dimen/unit30"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="@dimen/unit100"-->
                <!--android:background="#343434" />-->

                <ImageView
                    android:id="@+id/iv_language_zh_tw"
                    android:layout_width="@dimen/unit35"
                    android:layout_height="@dimen/unit30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/unit100"
                    android:background="#343434"
                    android:src="@null" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_language_en"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:tag="rl_language_en">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit20"
                    android:text="English"
                    android:textColor="@color/mainFontGolden"
                    android:textSize="@dimen/font20" />

                <!--<TextView-->
                <!--android:layout_width="@dimen/unit30"-->
                <!--android:layout_height="@dimen/unit30"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginRight="@dimen/unit100"-->
                <!--android:background="#343434" />-->

                <ImageView
                    android:id="@+id/iv_language_en"
                    android:layout_width="@dimen/unit35"
                    android:layout_height="@dimen/unit30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/unit100"
                    android:background="#343434"
                    android:src="@null" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>