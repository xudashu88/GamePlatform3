<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/contentContainer"
        android:layout_alignTop="@id/contentContainer"
        android:layout_alignRight="@id/contentContainer"
        android:layout_alignBottom="@id/contentContainer"
        android:background="@drawable/choose_table_row2_bg"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/unit2"
        android:visibility="visible"
        android:weightSum="38">

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit1"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_just_in_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unit272"
                android:visibility="visible">
                <!-- 16*6=98 16*13=208  -->
                <com.purity.yu.gameplatform.baccarat.YCHGridView
                    android:id="@+id/gv_left"
                    android:layout_width="@dimen/unit288"
                    android:layout_height="@dimen/unit272"
                    android:background="@color/white"
                    app:column="6"
                    app:divideColor="@color/gridLine"
                    app:divideHeight="1dp"
                    app:noBottom="false"
                    app:noRight="false"
                    app:row="17" />

                <LinearLayout
                    android:id="@+id/ll_3"
                    android:layout_width="@dimen/unit140"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/unit1"
                    android:layout_marginBottom="@dimen/unit1"
                    android:layout_toRightOf="@id/gv_left"
                    android:layout_weight="3"
                    android:background="@drawable/choose_table_roadnumbers"
                    android:orientation="vertical"
                    android:visibility="visible"
                    android:weightSum="5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/unit10"
                            android:layout_marginTop="@dimen/unit10"
                            android:layout_marginBottom="@dimen/unit5"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="@string/spade"
                            android:textColor="@color/mainFontGolden"
                            android:textSize="@dimen/font16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_spade_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/unit10"
                            android:layout_marginTop="@dimen/unit10"
                            android:layout_marginBottom="@dimen/unit5"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="@string/hearts"
                            android:textColor="@color/mainFontGolden"
                            android:textSize="@dimen/font16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_hearts_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/unit10"
                            android:layout_marginTop="@dimen/unit10"
                            android:layout_marginBottom="@dimen/unit5"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="@string/clubs"
                            android:textColor="@color/mainFontGolden"
                            android:textSize="@dimen/font16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_clubs_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/unit10"
                            android:layout_marginTop="@dimen/unit10"
                            android:layout_marginBottom="@dimen/unit5"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="@string/diamonds"
                            android:textColor="@color/mainFontGolden"
                            android:textSize="@dimen/font16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_diamonds_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/unit10"
                            android:layout_marginTop="@dimen/unit5"
                            android:layout_marginBottom="@dimen/unit10"
                            android:layout_weight="1.2"
                            android:gravity="center"
                            android:text="@string/king"
                            android:textColor="@color/mainFontGolden"
                            android:textSize="@dimen/font16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_king_count"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font14" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/unit426"
                android:layout_height="@dimen/unit25"
                android:layout_marginRight="0dp"
                android:layout_weight="3"
                android:background="@drawable/choose_table_bottom_board_bg">

                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit5"
                    android:text="@string/loading"
                    android:textColor="#ffe7cd9d"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/unit5"
                    android:text="@string/players"
                    android:textColor="#ffffd800"
                    android:textSize="@dimen/font12"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit140"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stakeLimitMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stake_limit"
                        android:textColor="#ffe7cd9d"
                        android:textSize="@dimen/font12" />

                    <TextView
                        android:id="@+id/stakeLimitLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20-500000"
                        android:textColor="#ffe7cd9d"
                        android:textSize="@dimen/font12" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


        <!--  android:layout_weight="4.5"-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/ll_2"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="6">

            <!--EEC51A F00000-->
            <com.purity.yu.gameplatform.widget.PercentCircleAntiClockwise
                android:id="@+id/pcac"
                android:layout_width="@dimen/unit80"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                android:visibility="visible"
                app:circleBackground="#000"
                app:radius="220"
                app:ringColor="#EEC51A"
                app:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_start_game"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/unit5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/start_game"
                android:textColor="@color/white"
                android:textSize="@dimen/font12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=">>"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>