<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1b1b1b"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit25"
        android:layout_marginTop="@dimen/unit20"
        android:gravity="center"
        android:text="@string/set_other"
        android:textColor="@color/mainFontGolden"
        android:textSize="@dimen/font16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/unit30"
        android:background="@drawable/bg_gray_stroke_golden_menu_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/unit8"
            android:background="#252525"
            android:orientation="vertical"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit20"
                    android:text="@string/video_toggle"
                    android:textColor="@color/mainFontGolden"
                    android:textSize="@dimen/font20" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/unit30">

                    <TextView
                        android:id="@+id/tv_video_switch_off"
                        android:layout_width="@dimen/unit70"
                        android:layout_height="@dimen/unit30"
                        android:background="@drawable/setting_toggle_off"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_video_switch_on"
                        android:layout_width="@dimen/unit70"
                        android:layout_height="@dimen/unit30"
                        android:background="@drawable/setting_toggle_on"
                        android:visibility="visible" />
                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/unit2"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit20"
                    android:text="@string/push_toggle"
                    android:textColor="@color/mainFontGolden"
                    android:textSize="@dimen/font20" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/unit30">

                    <TextView
                        android:id="@+id/tv_push_switch_off"
                        android:layout_width="@dimen/unit70"
                        android:layout_height="@dimen/unit30"
                        android:background="@drawable/setting_toggle_off"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_push_switch_on"
                        android:layout_width="@dimen/unit70"
                        android:layout_height="@dimen/unit30"
                        android:background="@drawable/setting_toggle_on"
                        android:visibility="visible" />
                </FrameLayout>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>