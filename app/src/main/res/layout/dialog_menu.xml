<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_menu_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit50"
        android:background="@drawable/top_bar">

        <ImageView
            android:layout_width="@dimen/unit50"
            android:layout_height="@dimen/unit50"
            android:layout_centerInParent="true"
            android:background="@drawable/logo" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_title"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_records"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v1"
        android:background="@drawable/select_menu"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_records"
            android:layout_width="@dimen/unit25"
            android:layout_height="@dimen/unit25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:background="@drawable/menu_records" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit40"
            android:text="@string/records"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_records"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v2"
        android:background="@drawable/select_menu"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="@dimen/unit25"
            android:layout_height="@dimen/unit25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:background="@drawable/menu_settings" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit40"
            android:text="@string/setting"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_setting"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_suggestion"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v3"
        android:background="@drawable/select_menu"
        android:visibility="visible"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_suggestion"
            android:layout_width="@dimen/unit25"
            android:layout_height="@dimen/unit25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:background="@drawable/menu_feedback" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit40"
            android:text="@string/suggestion"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_suggestion"
        android:visibility="visible"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_game_rule"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v4"
        android:background="@drawable/select_menu"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_game_rule"
            android:layout_width="@dimen/unit25"
            android:layout_height="@dimen/unit25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:background="@drawable/menu_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit40"
            android:text="@string/game_rule"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_game_rule"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v5"
        android:background="@drawable/select_menu"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_message"
            android:layout_width="@dimen/unit25"
            android:layout_height="@dimen/unit25"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:background="@drawable/menu_feedback" />

        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="@dimen/unit15"
            android:layout_height="@dimen/unit15"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/unit22"
            android:layout_marginTop="@dimen/unit5"
            android:background="@drawable/solid_circle_red"
            android:gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="@dimen/font8"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit40"
            android:text="@string/message"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_message"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v6"
        android:background="@drawable/select_menu"
        android:clickable="true">

        <!--<ImageView-->
        <!--android:id="@+id/iv_exit"-->
        <!--android:layout_width="@dimen/unit25"-->
        <!--android:layout_height="@dimen/unit25"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_marginLeft="@dimen/unit10"-->
        <!--android:background="@drawable/menu_feedback" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/unit40"
            android:text="@string/exit_app"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>
    <!--#252525-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_menu_exit"
        android:background="@color/menuPress"
        android:visibility="visible" />

</RelativeLayout>