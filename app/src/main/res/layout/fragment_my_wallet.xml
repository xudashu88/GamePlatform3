<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/unit200"
        android:layout_height="@dimen/unit150"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_deposit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit45"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/unit20"
            android:layout_marginTop="@dimen/unit5"
            android:layout_marginRight="@dimen/unit20"
            android:background="@drawable/select_common_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/deposit"
            android:textColor="@color/black"
            android:textSize="@dimen/font20"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_withdraw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit45"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/unit20"
            android:layout_marginTop="@dimen/unit40"
            android:layout_marginRight="@dimen/unit20"
            android:background="@drawable/select_common_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/withdraw"
            android:textColor="@color/black"
            android:textSize="@dimen/font20"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>