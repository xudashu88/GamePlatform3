<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_hd"
        android:layout_width="@dimen/unit70"
        android:layout_height="@dimen/unit25"
        android:background="@drawable/select_video"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit35"
            android:layout_marginLeft="@dimen/unit5"
            android:gravity="center_vertical"
            android:text="@string/video_hd"
            android:textColor="@color/mainGoldenUnderTine"
            android:textSize="@dimen/font10" />

        <ImageView
            android:layout_width="@dimen/unit5"
            android:layout_height="@dimen/unit20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/unit5"
            android:background="@drawable/video_channel" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_ld"
        android:layout_width="@dimen/unit70"
        android:layout_height="@dimen/unit25"
        android:layout_marginTop="@dimen/unit2"
        android:background="@drawable/select_video"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/unit5"
            android:gravity="center_vertical"
            android:text="@string/video_ld"
            android:textColor="@color/mainGoldenUnderTine"
            android:textSize="@dimen/font10" />

        <ImageView
            android:layout_width="@dimen/unit5"
            android:layout_height="@dimen/unit20"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/unit5"
            android:background="@drawable/video_channel" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_close"
        android:layout_width="@dimen/unit70"
        android:layout_height="@dimen/unit25"
        android:layout_marginTop="@dimen/unit2"
        android:background="@drawable/select_video"
        android:clickable="true"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/unit5"
        android:text="@string/video_close"
        android:textSize="@dimen/font10"
        android:textColor="@color/mainGoldenUnderTine" />
</LinearLayout>