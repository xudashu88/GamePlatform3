<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/unit74"
    android:background="@color/ruleBg"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/coffee" />

    <LinearLayout
        android:id="@+id/ll_rule_bac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_rule_bac"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit35"
            android:layout_marginLeft="@dimen/unit15"
            android:gravity="center_vertical"
            android:text="@string/ba_game"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font16" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_rule_dt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_rule_dt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit35"
            android:layout_marginLeft="@dimen/unit15"
            android:gravity="center_vertical"
            android:text="@string/dt_game"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font16" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/coffee" />
</LinearLayout>