<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/unit16"
    android:layout_height="@dimen/unit16"
    android:background="@drawable/bg_gv_gold"
    android:clickable="false">
    <!--
             android:background="@drawable/bead_banker"
                android:background="@drawable/odds_small_bg_red"
                    android:background="@drawable/odds_small_bg_blue"
             -->
    <ImageView
        android:id="@+id/iv_item"
        android:layout_width="@dimen/unit12"
        android:layout_height="@dimen/unit12"
        android:layout_centerInParent="true"

        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_dot_left_top"
        android:layout_width="@dimen/unit5"
        android:layout_height="@dimen/unit5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_dot_right_bottom"
        android:layout_width="@dimen/unit5"
        android:layout_height="@dimen/unit5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"

        android:visibility="visible" />

</RelativeLayout>