<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/contentContainer"
        android:layout_alignLeft="@id/contentContainer"
        android:layout_alignRight="@id/contentContainer"
        android:layout_alignTop="@id/contentContainer"
        android:background="@drawable/choose_table_row2_bg"
        android:scaleType="fitXY" />
    <!--  android:background="@drawable/choose_table_row2_bg"-->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/unit2"
        android:visibility="visible"
        android:weightSum="38">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.5"
            android:visibility="visible">

            <ImageView
                android:id="@+id/iv_waitress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/unit98"
                android:background="@drawable/machine_a"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_waitress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_waitress"
                android:background="@drawable/choose_table_bottom_board_bg"
                android:gravity="center"
                android:text="Nancy"
                android:textColor="@color/mainGoldenYellow"
                android:textSize="@dimen/font16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/unit1"
            android:layout_weight="26"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="12"
                android:orientation="horizontal"
                android:weightSum="25">
                <!--6行10列 delay -->
                <GridView
                    android:id="@+id/gv_left"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="10"
                    android:horizontalSpacing="0.0dip"
                    android:listSelector="@null"
                    android:numColumns="10"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="0.0dip" />

                <GridView
                    android:id="@+id/gv_right_top"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:horizontalSpacing="0.0dip"
                    android:listSelector="@null"
                    android:numColumns="30"
                    android:scrollbars="none"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="0.0dip"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="15"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:weightSum="12">

                    <!--6行30列-->
                    <GridView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:horizontalSpacing="0.0dip"
                        android:listSelector="@null"
                        android:numColumns="30"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="0.0dip"
                        android:visibility="visible" />

                    <!--<include layout="@layout/in_divide_horizontal_grid_line" />-->
                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1px"-->
                    <!--android:background="#000" />-->
                    <!--3行30列-->
                    <GridView
                        android:id="@+id/gv_right_middle"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:horizontalSpacing="0.0dip"
                        android:listSelector="@null"
                        android:numColumns="30"
                        android:scrollbars="none"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="0.0dip"
                        android:visibility="visible" />

                    <!--<include layout="@layout/in_divide_horizontal_grid_line" />-->
                    <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="1px"-->
                    <!--android:background="#000" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        android:weightSum="1">
                        <!--3行15列-->
                        <GridView
                            android:id="@+id/gv_right_bottom_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:horizontalSpacing="0.0dip"
                            android:listSelector="@null"
                            android:numColumns="30"
                            android:scrollbars="none"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="0.0dip" />

                        <!--<include layout="@layout/in_divide_vertical_grid_line" />-->

                        <!--<View-->
                        <!--android:layout_width="1px"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="#000" />-->
                        <!--3行15列-->
                        <GridView
                            android:id="@+id/gv_right_bottom_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:horizontalSpacing="0.0dip"
                            android:listSelector="@null"
                            android:numColumns="15"
                            android:scrollbars="none"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="0.0dip" />
                    </LinearLayout>

                </LinearLayout>
                <!--<include layout="@layout/in_divide_vertical_grid_line" />-->
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="3"
                android:background="@drawable/choose_table_bottom_board_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit5"
                    android:text="@string/loading"
                    android:textColor="#ffe7cd9d"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/unit5"
                    android:text="@string/players"
                    android:textColor="#ffffd800"
                    android:textSize="@dimen/font12" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit140"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stakeLimitMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stake_limit"
                        android:textColor="#ffe7cd9d"
                        android:textSize="@dimen/font12" />

                    <TextView
                        android:id="@+id/stakeLimitLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/loading"
                        android:textColor="#ffe7cd9d"
                        android:textSize="@dimen/font12" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/unit1"
            android:layout_marginTop="@dimen/unit1"
            android:layout_weight="3"
            android:background="@drawable/choose_table_roadnumbers"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/unit8"
                    android:layout_marginLeft="@dimen/unit5"
                    android:layout_marginTop="@dimen/unit8"
                    android:layout_weight="1"
                    android:background="@drawable/tv_shape_oval_red"
                    android:gravity="center"
                    android:text="@string/banker"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/unit8"
                    android:layout_marginLeft="@dimen/unit5"
                    android:layout_marginTop="@dimen/unit8"
                    android:layout_weight="1"
                    android:background="@drawable/tv_shape_oval_blue"
                    android:gravity="center"
                    android:text="@string/player"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/unit8"
                    android:layout_marginLeft="@dimen/unit5"
                    android:layout_marginTop="@dimen/unit8"
                    android:layout_weight="1"
                    android:background="@drawable/tv_shape_oval_green"
                    android:gravity="center"
                    android:text="@string/tie"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="6">

            <!--EEC51A F00000-->
            <com.chuangku.gameplatform3.widget.PercentCircleAntiClockwise
                android:id="@+id/pcac"
                android:layout_width="@dimen/unit60"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                app:circleBackground="#000"
                app:radius="220"
                app:ringColor="#EEC51A"
                app:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_start_game"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/unit5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/start_game"
                android:textColor="@color/white"
                android:textSize="@dimen/font12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=">>"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>