<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBlack"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_simple_chinese"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:background="@drawable/select_language">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit40"
            android:layout_marginLeft="@dimen/unit20"
            android:gravity="center_vertical"
            android:text="简体中文"
            android:textSize="@dimen/font16"
            android:textColor="@color/selector_font_golden_language" />
    </LinearLayout>

    <include layout="@layout/include_divide_horizontal_line" />

    <LinearLayout
        android:id="@+id/ll_traditional_chinese"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:background="@drawable/select_language">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit40"
            android:layout_marginLeft="@dimen/unit20"
            android:gravity="center_vertical"
            android:text="繁體中文"
            android:textSize="@dimen/font16"
            android:textColor="@color/selector_font_golden_language" />
    </LinearLayout>

    <include layout="@layout/include_divide_horizontal_line" />

    <LinearLayout
        android:id="@+id/ll_english"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:background="@drawable/select_language">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit40"
            android:layout_marginLeft="@dimen/unit20"
            android:gravity="center_vertical"
            android:text="English"
            android:textSize="@dimen/font16"
            android:textColor="@color/selector_font_golden_language" />
    </LinearLayout>

    <include layout="@layout/include_divide_horizontal_line" />
</LinearLayout>