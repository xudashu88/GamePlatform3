<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#66000000"
    android:orientation="vertical"
    android:weightSum="8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/bank_play_limit_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_bet_limit_bp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="30000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/tie_limit_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_bet_limit_tie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="30000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/pair_limit_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_bet_limit_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="30000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/big_small_limit_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_bet_limit_bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="30000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/player_banker_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_table_limit_bp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="20-100000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/dt_tie_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_table_limit_tie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="20-100000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/pair_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_table_limit_pair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="20-100000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_banker_pair"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:text="@string/big_small_colon"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />

        <TextView
            android:id="@+id/tv_table_limit_bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/unit5"
            android:text="20-100000"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font14" />
    </LinearLayout>

</LinearLayout>