<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_menu_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit50"
        android:background="@color/menuPress">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/unit25"
            android:layout_height="@dimen/unit40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit40"
            android:text="@string/records"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_title"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_bet_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v1"
        android:background="@drawable/select_menu"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:text="@string/bet_record"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/menu_v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rl_menu_bet_record"
        android:background="@color/menuPress" />

    <RelativeLayout
        android:id="@+id/rl_menu_quota_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/unit40"
        android:layout_below="@id/menu_v2"
        android:background="@drawable/select_menu"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/unit10"
            android:text="@string/quota_record"
            android:textColor="@color/mainFontGolden"
            android:textSize="@dimen/font16"
            android:textStyle="bold" />
    </RelativeLayout>


    <!--#252525-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_menu_quota_record"
        android:background="@color/menuPress"
        android:visibility="visible" />

</RelativeLayout>