<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/unit40"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:shadowColor="@color/green"

            android:text="客服微信号："
            android:textColor="#72B506"
            android:textSize="@dimen/unit25"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_WeChat_link"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/unit40"
            android:layout_toRightOf="@+id/tv"
            android:shadowColor="@color/new_red"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="5.0"
            android:text="我是微信號"
            android:textColor="#08F200"
            android:textSize="@dimen/unit25"
            android:textStyle="bold" />
    </RelativeLayout>


    <ImageView
        android:id="@+id/iv_WeChat_link"
        android:layout_width="@dimen/unit200"
        android:layout_height="@dimen/unit200"
        android:layout_below="@+id/ll_top"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/unit15"
        android:background="@drawable/wechat_contact1" />
</RelativeLayout>