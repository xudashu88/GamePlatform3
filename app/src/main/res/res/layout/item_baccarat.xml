<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/contentContainer"
        android:layout_alignTop="@id/contentContainer"
        android:layout_alignRight="@id/contentContainer"
        android:layout_alignBottom="@id/contentContainer"
        android:background="@drawable/choose_table_row2_bg"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/unit2"
        android:visibility="visible"
        android:weightSum="38">

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/unit1"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/rl_just_in_time"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/unit96"
                android:visibility="visible">

                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_left"
                    android:layout_width="@dimen/unit208"
                    android:layout_height="@dimen/unit98"
                    android:background="@color/white"
                    app:column="13"
                    app:divideColor="@color/gridLine"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="6" />
                <!--6行30列-->
                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_right_top"
                    android:layout_width="@dimen/unit240"
                    android:layout_height="@dimen/unit48"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:column="30"
                    app:divideColor="@color/gridLine"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="6" />

                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_right_middle_grid"
                    android:layout_width="@dimen/unit240"
                    android:layout_height="@dimen/unit24"
                    android:layout_below="@id/gv_right_top"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:column="30"
                    app:divideColor="@color/gridLine"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="3" />
                <!--3行30列-->
                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_right_middle"
                    android:layout_width="@dimen/unit240"
                    android:layout_height="@dimen/unit24"
                    android:layout_below="@id/gv_right_top"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:column="60"
                    app:divideColor="@color/transparent"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="6" />

                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_right_bottom_1_grid"
                    android:layout_width="@dimen/unit120"
                    android:layout_height="@dimen/unit24"
                    android:layout_below="@id/gv_right_middle"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:column="15"
                    app:divideColor="@color/gridLine"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="3" />

                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_right_bottom_1"
                    android:layout_width="@dimen/unit120"
                    android:layout_height="@dimen/unit24"
                    android:layout_below="@id/gv_right_middle"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:column="30"
                    app:divideColor="@color/transparent"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="6" />

                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_right_bottom_2_grid"
                    android:layout_width="@dimen/unit120"
                    android:layout_height="@dimen/unit24"
                    android:layout_below="@id/gv_right_middle"
                    android:layout_toRightOf="@id/gv_right_bottom_1"
                    android:background="@color/white"
                    android:visibility="visible"
                    app:column="15"
                    app:divideColor="@color/gridLine"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="3" />

                <com.purity.yu.gameplatform.baccarat.YHZGridView
                    android:id="@+id/gv_right_bottom_2"
                    android:layout_width="@dimen/unit120"
                    android:layout_height="@dimen/unit24"
                    android:layout_below="@id/gv_right_middle"
                    android:layout_toRightOf="@id/gv_right_bottom_1"
                    android:background="@color/transparent"
                    android:visibility="visible"
                    app:column="30"
                    app:divideColor="@color/transparent"
                    app:divideHeight="1dp"
                    app:noBottom="true"
                    app:noRight="true"
                    app:row="6" />

                <View
                    android:id="@+id/v_1"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/unit98"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/gridDivideLine"
                    android:visibility="visible" />

                <View
                    android:id="@+id/v_2"
                    android:layout_width="@dimen/unit240"
                    android:layout_height="1dp"
                    android:layout_below="@id/gv_right_top"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/gridDivideLine" />

                <View
                    android:id="@+id/v_3"
                    android:layout_width="@dimen/unit240"
                    android:layout_height="1dp"
                    android:layout_below="@id/gv_right_middle"
                    android:layout_toRightOf="@id/gv_left"
                    android:background="@color/gridDivideLine" />

                <View
                    android:id="@+id/v_4"
                    android:layout_width="1dp"
                    android:layout_height="@dimen/unit24"
                    android:layout_below="@id/gv_right_middle"
                    android:layout_toRightOf="@id/gv_right_bottom_1"
                    android:background="@color/gridDivideLine" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/unit448"
                android:layout_height="@dimen/unit25"
                android:layout_marginRight="0dp"
                android:layout_weight="3"
                android:background="@drawable/choose_table_bottom_board_bg">

                <TextView
                    android:id="@+id/tv_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit5"
                    android:text="@string/loading"
                    android:textColor="#ffe7cd9d"
                    android:textSize="@dimen/font12" />

                <TextView
                    android:id="@+id/tv_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/unit5"
                    android:text="@string/players"
                    android:textColor="#ffffd800"
                    android:textSize="@dimen/font12"
                    android:visibility="gone" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/unit140"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/stakeLimitMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/stake_limit"
                        android:textColor="#ffe7cd9d"
                        android:textSize="@dimen/font12" />

                    <TextView
                        android:id="@+id/stakeLimitLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0-0"
                        android:textColor="#ffe7cd9d"
                        android:textSize="@dimen/font12" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_3"
            android:layout_width="@dimen/unit41"
            android:layout_height="@dimen/unit120"
            android:layout_marginTop="@dimen/unit1"
            android:layout_marginBottom="@dimen/unit1"
            android:layout_toLeftOf="@+id/ll_4"
            android:layout_weight="3"
            android:background="@drawable/choose_table_roadnumbers"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_bank"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/unit5"
                    android:layout_marginTop="@dimen/unit10"
                    android:layout_marginBottom="@dimen/unit10"
                    android:layout_weight="1"
                    android:background="@drawable/tv_shape_oval_red"
                    android:gravity="center"
                    android:text="@string/banker"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_bank_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_play"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/unit5"
                    android:layout_marginTop="@dimen/unit10"
                    android:layout_marginBottom="@dimen/unit10"
                    android:layout_weight="1"
                    android:background="@drawable/tv_shape_oval_blue"
                    android:gravity="center"
                    android:text="@string/player"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_player_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_tie"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/unit5"
                    android:layout_marginTop="@dimen/unit10"
                    android:layout_marginBottom="@dimen/unit10"
                    android:layout_weight="1"
                    android:background="@drawable/tv_shape_oval_green"
                    android:gravity="center"
                    android:text="@string/tie"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_tie_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font14" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_4"
            android:layout_width="@dimen/unit52"
            android:layout_height="@dimen/unit98"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="6">

            <!--EEC51A F00000-->
            <com.purity.yu.gameplatform.widget.PercentCircleAntiClockwise
                android:id="@+id/pcac"
                android:layout_width="@dimen/unit50"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="4"
                app:circleBackground="#000"
                app:radius="220"
                app:ringColor="#EEC51A"
                app:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_start_game"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/unit5"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/start_game"
                android:textColor="@color/white"
                android:textSize="@dimen/font12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=">>"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/ll_3"
            android:layout_toRightOf="@+id/ll_2" />
    </RelativeLayout>


</RelativeLayout>