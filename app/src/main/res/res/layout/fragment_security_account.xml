<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/unit5"
        android:paddingRight="@dimen/unit5"
        android:weightSum="9.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="修改登录密码"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font20" />

        <LinearLayout
            android:layout_width="@dimen/unit400"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="旧密码:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_old_login_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="请输入旧密码"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/unit400"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="新密码:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_new_login_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="请输入新密码"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/unit400"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="确认新密码:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_confirm_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="请再次输入新密码"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_modify_login"
            android:layout_width="@dimen/unit100"
            android:layout_height="@dimen/unit35"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/unit10"
            android:background="@drawable/select_common_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/black"
            android:textSize="@dimen/font20"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/unit5"
        android:paddingRight="@dimen/unit5"
        android:weightSum="9.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="修改支付密码"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="登录密码:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_old_pay_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="请输入登录密码"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:maxLength="6"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="新密码:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_new_pay_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="请输入新支付密码"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="确认新密码:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_confirm_pay"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.5"
                android:background="@null"
                android:hint="请再次输入支付密码"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="6"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_modify_pay"
            android:layout_width="@dimen/unit100"
            android:layout_height="@dimen/unit35"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/unit10"
            android:background="@drawable/select_common_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/black"
            android:textSize="@dimen/font20"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>