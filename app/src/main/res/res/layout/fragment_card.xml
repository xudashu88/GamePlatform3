<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/unit15"
        android:paddingTop="@dimen/unit5"
        android:paddingRight="@dimen/unit15"
        android:weightSum="6.2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="支付方式:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_pay_method"
                android:layout_width="0dp"
                android:layout_height="@dimen/unit25"
                android:layout_weight="2"
                android:background="@drawable/select_bet_limit_btn"
                android:clickable="true"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/white"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="游戏昵称:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_game_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:gravity="center|left"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGolden"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="支  付   人:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_pay_account"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="真实姓名"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="存款金额:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_deposit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入大于0的整数"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="number"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <!-- hidden -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_pay_nickname"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="支付账号:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_pay_nickname"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="支付昵称"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>
        <!-- hidden -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="订单号(后5位):"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font10" />

            <EditText
                android:id="@+id/et_pay_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入订单号后5位"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:maxLength="5"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_pay"
            android:layout_width="@dimen/unit100"
            android:layout_height="@dimen/unit35"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/unit5"
            android:background="@drawable/select_common_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/deposit"
            android:textColor="@color/black"
            android:textSize="@dimen/font20"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tv_pay_code"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit60"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="ICBC银行
11111111111111111111111111111"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font16"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_method"
            android:layout_width="match_parent"
            android:layout_height="@dimen/unit25"
            android:layout_below="@+id/tv_pay_code"
            android:layout_marginTop="@dimen/unit10"
            android:gravity="center"
            android:text="支付宝支付"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font16" />

        <ImageView
            android:id="@+id/iv_pay_code"
            android:layout_width="@dimen/unit200"
            android:layout_height="@dimen/unit200"
            android:layout_below="@id/tv_method"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:paddingLeft="@dimen/unit5"
        android:paddingRight="@dimen/unit5"
        android:visibility="gone"
        android:weightSum="9.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="提款专区"
            android:textColor="@color/mainGolden"
            android:textSize="@dimen/font20" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="您的姓名:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_your_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入姓名"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="银行卡号:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_bank_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入银行卡号"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_select_bank"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:background="@drawable/select_common_btn"
                android:clickable="true"
                android:gravity="center"
                android:text="选择"
                android:textColor="@color/black"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="提现金额:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_withdraw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请输入大于0的整数"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="number"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="银行名称:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_bank_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="开户行名称"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="所在分行:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_bank_branch"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请填写分行"
                android:imeOptions="actionNext|flagNoExtractUi"
                android:inputType="text"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="支付密码:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <EditText
                android:id="@+id/et_pay_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:background="@null"
                android:hint="请填写支付密码"
                android:imeOptions="actionDone|flagNoExtractUi"
                android:inputType="number"
                android:textColor="@color/mainGolden"
                android:textColorHint="@color/mainGoldenUnderTine"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="@dimen/font12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="5">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="可用额度:"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />

            <TextView
                android:id="@+id/tv_free"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:text="0"
                android:textColor="@color/mainGolden"
                android:textSize="@dimen/font12" />
        </LinearLayout>


        <TextView
            android:id="@+id/btn_withdraw"
            android:layout_width="@dimen/unit100"
            android:layout_height="@dimen/unit35"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/unit10"
            android:background="@drawable/select_common_btn"
            android:clickable="true"
            android:gravity="center"
            android:text="提现"
            android:textColor="@color/black"
            android:textSize="@dimen/font20"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>