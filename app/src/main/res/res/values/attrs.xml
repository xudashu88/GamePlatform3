<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--手势锁-->
    <declare-styleable name="GestureLock">
        <attr name="line_width" format="dimension" />
        <attr name="line_normal_color" format="color" />
        <attr name="line_error_color" format="color" />
    </declare-styleable>
    <!--圆环进度条倒计时-->
    <declare-styleable name="PercentageRing">
        <attr name="radius" format="integer" />
        <attr name="allTime" format="integer" />
        <attr name="circleBackground" format="color" />
        <attr name="ringColor" format="color" />
        <attr name="textColor" format="color" />
    </declare-styleable>
    <!--自定义网格线-->
    <declare-styleable name="gridLine">
        <attr name="divideHeight" format="dimension"/>
        <attr name="divideColor" format="reference|color"/>
        <attr name="row" format="integer" />
        <attr name="column" format="integer" />
        <attr name="noRight" format="boolean" />
        <attr name="noBottom" format="boolean" />
    </declare-styleable>
    <!--背景圆的Text-->
    <declare-styleable name="textCircle">
        <attr name="bgColor" format="reference|color"/>
        <attr name="circleTextColor" format="reference|color"/>
        <attr name="text" format="reference|string" />
    </declare-styleable>
    <!--图片垂直堆叠-->
    <declare-styleable name="PileLayout">
        <attr name="PileLayout_vertivalSpace" format="dimension"/>
        <attr name="PileLayout_pileWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="AVLoadingIndicatorView">
        <attr name="minWidth" format="dimension" />
        <attr name="maxWidth" format="dimension"/>
        <attr name="minHeight" format="dimension" />
        <attr name="maxHeight" format="dimension"/>
        <attr name="indicatorName" format="string"/>
        <attr name="indicatorColor" format="color"/>
    </declare-styleable>
</resources>